<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/makhraj_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:paddingEnd="143dp"
        android:paddingLeft="164dp"
        android:paddingRight="143dp"
        android:paddingStart="164dp"
        android:scaleType="center"
        app:elevation="8dp"
        app:fabSize="normal"
        tools:ignore="RtlHardcoded"
        app:srcCompat="@drawable/makhraj_button"
        android:layout_above="@+id/ghunnah_button"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ghunnah_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingEnd="143dp"
        android:paddingLeft="164dp"
        android:paddingRight="143dp"
        android:paddingStart="164dp"
        android:scaleType="center"
        app:fabSize="normal"
        app:srcCompat="@drawable/ghunnah_button"
        tools:ignore="RelativeOverlap"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:scaleType="center"
        app:srcCompat="@drawable/mad_button"
        android:paddingEnd="143dp"
        android:paddingLeft="164dp"
        android:paddingRight="143dp"
        android:paddingStart="164dp"
        android:layout_below="@+id/makhraj_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gharib_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:clickable="true"
        app:fabSize="normal"
        android:scaleType="center"
        app:srcCompat="@drawable/gharib_button"
        tools:ignore="RtlHardcoded"
        android:layout_below="@+id/mad_button"
        android:layout_alignLeft="@+id/makhraj_button"
        android:layout_alignStart="@+id/makhraj_button" />
</RelativeLayout>